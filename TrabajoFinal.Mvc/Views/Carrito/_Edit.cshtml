@model Servicios.Interfaces.Carrito.Peticiones.CarritoActualizar

<h2>Incrementar Cantidad</h2>

<dl class="dl-horizontal">
    <dt>
        @Html.DisplayNameFor(model => model.NombreUsuario)
    </dt>

    <dd>
        @Html.DisplayFor(model => model.NombreUsuario)
    </dd>

    <dt>
        @Html.DisplayNameFor(model => model.NombreProd)
    </dt>

    <dd>
        @Html.DisplayFor(model => model.NombreProd)
    </dd>

    <dt>
        @Html.DisplayNameFor(model => model.Precio)
    </dt>

    <dd>
        @Html.DisplayFor(model => model.Precio)
    </dd>


</dl>

@using (Ajax.BeginForm("Edit", new { Controller = "Carrito" },
    new AjaxOptions
    {
        HttpMethod = "POST",
        InsertionMode = InsertionMode.Replace,
        UpdateTargetId = "table-container",
        OnSuccess = "carrito.success('edit');"
    },
            new
            {
                enctype = "multipart/form-data"
            }))
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.Id)


    <div class="form-group">
        @Html.LabelFor(model => model.Cantidad, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Cantidad, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Cantidad, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-10">
            @Html.EditorFor(model => model.NombreUsuario, new { htmlAttributes = new { @class = "control-label col-md-2", style = "display:none" } })
            @Html.ValidationMessageFor(model => model.NombreUsuario, "", new { @class = "control-label col-md-2", style = "display:none" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-10">
            @Html.EditorFor(model => model.NombreProd, new { htmlAttributes = new { @class = "form-control", style = "display:none" } })
            @Html.ValidationMessageFor(model => model.NombreProd, "", new { @class = "control-label col-md-2", style = "display:none" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-10">
            @Html.EditorFor(model => model.Precio, new { htmlAttributes = new { @class = "form-control", style = "display:none" } })
            @Html.ValidationMessageFor(model => model.Precio, "", new { @class = "text-danger", style = "display:none" })
        </div>
    </div>


    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Save" class="btn btn-default" />
        </div>
    </div>
</div>

}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
