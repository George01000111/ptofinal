
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")

    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
    <script type="text/javascript" src="~/Scripts/jquery.unobtrusive-ajax.js"></script>
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    <link rel="stylesheet" href="~/styles/stylesSASS.css" />

</head>
<body>

    <!-- Header -->
    <header id="header">
        <nav class="dropdown">
            <button class="menu-title">Menu</button>
            <ul class="dropdown-content">
                <li><a>@Html.ActionLink("Inicio", "Index", "Home")</a></li>
                @{
                    if (Session.Count == 0)
                    {
                        <li><a>@Html.ActionLink("Iniciar Sesion", "Index", "IniciarSesion")</a></li>
                        <li><a>@Html.ActionLink("Registrarse", "Index", "Usuario")</a></li>
                        <li><a>@Html.ActionLink("Productos", "Index", "Producto")</a></li>
                        <li><a>@Html.ActionLink("Sobre Nosotros", "About", "Home")</a></li>
                        <li><a>@Html.ActionLink("Contactenos", "Contact", "Home")</a></li>
                    }
                }
                @{
                    if (Session.Count != 0)
                    {
                        <li><a>@Html.ActionLink("Administración Usuario", "Index", "Usuario")</a></li>
                        <li><a>@Html.ActionLink("Comprar Productos", "Index", "ProductosPedidos")</a></li>
                        <li><a>@Html.ActionLink("Carro Compras", "Index", "Carrito")</a></li>
                        <li><a>@Html.ActionLink("Cerrar Sesion", "LogOff", "Usuario")</a></li>
                    }
                }
            </ul>
        </nav>
    </header>


    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - GalboTech</p>
        </footer>
    </div>
</body>
</html>